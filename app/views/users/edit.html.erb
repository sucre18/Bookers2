<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <div>
        <% if @user.errors.any? %>
          <h3 class="mb-2">
            <%= @user.errors.count %>error prohibited this obj from being saved:
          </h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
         </ul>
        <% end %>
      </div>
      <%= form_with model: @user, local: true do |f| %>
        <label for="user_name" style="display:block;">Name</label>
        <div class="mb-3">
          <%= f.text_field :name, autofocus: true, id:"user_name", placeholder: "名前", :class => "form-control" %>
        </div>
        <label for="user_image" style="display:block;">Image</label>
        <div class="mb-3">
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>
        <label for="user_introduction" style="display:block;">Introduction</label>
        <div class="mb-3">
          <%= f.text_area :introduction, id:"user_introduction", :class => "form-control" %>
        </div>
        <div class="mb-3">
        <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>