<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <% if current_user.profile_image.attached? %>
        <%= image_tag current_user.profile_image, :size => '63x63' %>
      <% else %>
        <%= image_tag 'no_image', :size => '63x63' %>
      <% end %>

      <table class="table">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= current_user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= current_user.introduction %></th>
        </tr>
      </tbody>
      </table>

      <div class="row">
        <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local: true do |f| %>
        <div class="mb-3">
          <label style="display:block;">Title</label>
          <%= f.text_field :title %>
        </div>
        <div class="mb-3">
          <label style="display:block;">Opinion</label>
          <%= f.text_area :body %>
        </div>
        <%= f.submit 'Create Book', class: "btn btn-success" %>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <th><%= image_tag book.user.get_profile_image %></th>
            <th><%= book.title %></th>
            <th><%= book.body %></th>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>